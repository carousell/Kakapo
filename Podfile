use_frameworks!

def testing_pods
    pod 'Quick', '~> 2.0'
    pod 'Nimble', '~> 8.0'
    pod 'SwiftyJSON', '~> 5.0'
end

target 'Kakapo iOSTests' do
    platform :ios, '10.0'
    testing_pods
end

target 'Kakapo tvOSTests' do
    platform :tvos, '11.0'
    testing_pods
end

target 'Kakapo macOSTests' do
    platform :osx, '10.12'
    testing_pods
end
